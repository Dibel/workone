extends layout
block content
    div.row.clearfix
        div.col-md-4.column
        div.col-md-4.column
                if (success)
                    div.alert.alert-success
                        //test
                if (error)
                    div.alert.alert-danger
                        strong 错误：
                        | #{error}
                h1= title
                form.form-horizontal(method="post")
                    fieldset
                        div.form-group
                            label.control-label.col-xs-3(for="username") 用户名
                            div.col-xs-9
                                input.form-control(type="text", id="username", name="username", placeholder="请输入用户名")
                        div.form-group
                            label.control-label.col-xs-3(for="password") 密码
                            div.col-xs-9
                                input.form-control(type="password", id="password", name="password", placeholder="请输入密码")
                        div.form-actions
                            .col-xs-offset-3.col-xs-9
                                input.btn.btn-primary(type="submit",value="登录")
            div.col-md-4.column